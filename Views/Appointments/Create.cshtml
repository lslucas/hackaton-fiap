@model ConsultasMedicas.Models.Appointment

@{
    ViewData["Title"] = "Nova Consulta";
    var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

<h2>Nova Consulta</h2>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <input type="hidden" asp-for="PatientId" value="@userId">
            <div class="form-group">
                <label asp-for="PatientId" class="control-label">Paciente</label>
                @User.Identity.Name
            </div>
            <div class="form-group">
                <label asp-for="DoctorId" class="control-label">Médico</label>
                <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Data da Consulta</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
